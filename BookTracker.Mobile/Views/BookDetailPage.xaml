<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:BookTracker.Mobile.ViewModels"
             x:Class="BookTracker.Mobile.Views.BookDetailPage"
             x:DataType="viewModels:BookDetailViewModel"
             Title="Book Detail">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Command="{Binding SaveCommand}" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">

            <Label Text="Title" />
            <Entry Text="{Binding Title}" Placeholder="Enter book title" />

            <Label Text="Author" />
            <Entry Text="{Binding Author}" Placeholder="Enter author name" />

            <Label Text="Status" />
            <Picker x:Name="StatusPicker">
                <Picker.Items>
                    <x:String>To Read</x:String>
                    <x:String>Reading</x:String>
                    <x:String>Finished</x:String>
                </Picker.Items>
            </Picker>

            <HorizontalStackLayout Spacing="10" Margin="0,20,0,0">
                <Button Text="Mark as Finished"
                        Command="{Binding MarkFinishedCommand}" />

                <Button Text="Delete"
                        TextColor="White"
                        BackgroundColor="Red"
                        Command="{Binding DeleteCommand}" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>